extends layouts/main-layout.pug 

block content
	h1(class='signupHeading') Signup
	form(class='signupForm' action='/auth/signup' method='POST')
		label(for='email') Email:
		input#email(type='text' name='email' placeholder='')
		label(for='password') Password:
		input#password(type='password' name='password' placeholder='')
		label(for='password') Confirm Password:
		input(type='password' name='confirmPassword' placeholder='')
		button(type='submit') Submit
	a(class='loginButton' href='/auth/login') Login